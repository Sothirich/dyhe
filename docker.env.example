# Docker Deployment Environment Variables
# Copy this to .env and update with your values

# Database
POSTGRES_DB=dyhe_production
POSTGRES_USER=dyhe_user
POSTGRES_PASSWORD=change-this-to-secure-password

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_SECRET=change-me-to-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=change-me-to-another-secure-random-string

# JWT Expiration
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=30d

# API URL (via nginx proxy)
# Local testing: http://localhost/api
# Production: https://your-domain.com/api
NEXT_PUBLIC_API_URL=http://localhost/api

